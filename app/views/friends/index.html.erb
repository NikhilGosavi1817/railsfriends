<% if user_signed_in?%>
  <table class="table  table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <!-- <div id="friends"> -->
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <td><%= link_to friend.first_name+' '+friend.last_name, friend, class: "link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %></td>
    
      <td><%= friend.phone %></td>
    
      <td><%= friend.email %></td>

      <td><%= friend.twitter %></td>

      <td><%= button_to "Delete", friend, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-outline-danger btn-sm" %></td>
    </tr>
    <% end %>


      <!-- <%= render friend %>
      <p>
        <%= link_to "Show this friend", friend %>
      </p> -->
    <% end %>
  <!-- </div> -->
    </tbody>
  </table>
